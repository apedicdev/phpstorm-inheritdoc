<idea-plugin version="2">
  <id>com.thanosp.phpstorm.inheritdoc</id>
  <name>PHP inheritDoc purger</name>
  <version>1.1</version>
  <vendor email="zinbiel@gmail.com" url="http://www.thanosp.com">Thanosp</vendor>

  <description><![CDATA[
      Purges PHP inheritDoc docblocks in favor of the actual text
    ]]></description>

  <change-notes><![CDATA[
      This plugin should be virtually replacing inheritDoc tags and showing the parent text.<br/>
      Until then, it will be removing @inheritDoc and replacing with the text.<br/>
      Long live humans.
    ]]>
  </change-notes>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Build+Number+Ranges for description -->
  <idea-version since-build="131"/>

  <!-- please see http://confluence.jetbrains.com/display/IDEADEV/Plugin+Compatibility+with+IntelliJ+Platform+Products
       on how to target different products -->
  <!-- uncomment to enable plugin in all products-->
  <depends>com.jetbrains.php</depends>
  <depends>com.intellij.modules.platform</depends>

  <extensions defaultExtensionNs="com.intellij">
      <localInspection groupPath="PHP"
                       shortName="InheritDocInspection"
                       displayName="InheritDoc text"
                       groupName="DocBlock"
                       enabledByDefault="true" level="ERROR"
                       implementationClass="com.thanosp.phpstorm.inheritdoc.InheritDocInspection"/>
      <intentionAction>
          <className>com.thanosp.phpstorm.inheritdoc.InheritDocIntention</className>
          <category>PHPDoc</category>
      </intentionAction>
  </extensions>

  <application-components>
    <!-- Add your application components here -->
  </application-components>

  <project-components>
    <!-- Add your project components here -->
  </project-components>

</idea-plugin>
